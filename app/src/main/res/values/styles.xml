<resources>
    <style name="SceneTabLayout">
        <item name="android:background">?cardBg</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <style name="NotificationInfo" parent="android:TextAppearance.Material.Notification.Info" />

    <style name="NotificationTitle" parent="android:TextAppearance.Material.Notification.Title" />

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:statusBarColor">?android:windowBackground</item>
        <item name="android:navigationBarColor">?android:windowBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardBg">@color/cardBgLight</item>
        <item name="showHints">gone</item>
        <item name="android:switchStyle">@style/SceneSwitch</item>
        <item name="android:seekBarStyle">@style/SceneSeekBar</item>
        <item name="android:checkboxStyle">@style/SceneCheckBox</item>
        <item name="android:radioButtonStyle">@style/SceneRadioBox</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardBg">@color/cardBgDark</item>
        <item name="showHints">gone</item>
        <item name="android:switchStyle">@style/SceneSwitch</item>
        <item name="android:seekBarStyle">@style/SceneSeekBar</item>
        <item name="android:checkboxStyle">@style/SceneCheckBox</item>
        <item name="android:radioButtonStyle">@style/SceneRadioBox</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="android:textColor">#888888</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="subtitleTextColor">?android:textColorSecondary</item>
        <item name="colorControlNormal">?android:textColorPrimary</item>
        <item name="android:foregroundTint">?android:textColorSecondary</item>
        <item name="android:foregroundTintMode">screen</item>
        <item name="android:drawableTint">?android:textColorPrimary</item>
    </style>

    <style name="AppThemeWhite" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/window_background_light</item>
        <item name="android:statusBarColor">@color/window_background_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Light</item>
        <item name="cardBg">@color/cardBgLight</item>
    </style>

    <style name="AppThemeNoActionBarNight" parent="AppThemeNight">
        <item name="android:textColor">#888888</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--activity 对话框样式  -->

    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
        <item name="android:taskOpenEnterAnimation">@anim/task_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/task_open_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/task_close_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/task_close_exit</item>
    </style>

    <style name="windowAnim">
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ListCardItem">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/krscript_item_ripple_inactive</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="ListCardItemSmall" parent="ListCardItem">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="ListCardItemLast" parent="ListCardItem">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="InCardListItemOrigin">
        <item name="android:background">@drawable/in_card_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="InCardListItem" parent="@style/InCardListItemOrigin">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="scene_config_item" parent="SceneSwitch">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">32dp</item>
    </style>
    <style name="scene_config_title" parent="textSmall">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="help_icon">
        <item name="android:alpha">0.5</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">DESC</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">#888888</item>
        <item name="android:src">@drawable/icon_question</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
    </style>
</resources>
